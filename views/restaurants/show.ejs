<% layout('layouts/boilerplate')%>

    <link rel="stylesheet" href="/stylesheets/stars.css">
    <div class="row">
        <div class="col-6 ">
            <div class="card mb-4">
                <div class="mb-4">
                    <h1>
                        <%= restaurant.title %>
                    </h1>
                    <h4 class="text-muted">
                        <%= restaurant.location %>
                    </h4>
                </div>
                <img class="img-fluid" src="<%=restaurant.image%> " alt="">
                <div class="card-body">

                    <p class="card-text">
                        <%=restaurant.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">

                    </li>

                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-warning" href="/restaurants/<%= restaurant.id %>/edit">Edit</a>
                    <!-- <a class="card-link" href="#" >Another link</a> -->
                    <form class="d-inline" action="/restaurants/<%=restaurant._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete restaurant</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a class="card-link" href="/restaurants">All restaurants</a>
                </div>
            </div>

        </div>

        <div class="col-6">

            <form class="validationreq mt-3 mb-3" action="/restaurants/<%=restaurant._id%>/reviews" method="POST"
                novalidate>
                <h2>Review Restaurant</h2>
                <div class="mb-3">
                    <!-- <label class="form-label" for="rating">Rating</label> -->
                    <!-- <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating"> -->
                </div>

                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>

                <div class="mb-3">
                    <label class="form-label" for="reviewbody">Review</label>
                    <textarea class="form-control" name="review[body]" id="reviewbody" cols="30" rows="5"
                        required></textarea>
                </div>
                <button class="btn btn-success">Submit Review</button>
            </form>

            <% for (let review of restaurant.reviews){ %>
                <div class="card mb-3">
                    <div class="card-body">

                        <p class="starability-result" data-rating="<%=review.rating %>">
                            Rating: <%=review.rating %>
                        </p>
                        <p>
                            Review: <%=review.body %>
                        </p>

                        <form action="/restaurants/<%=restaurant._id%>/reviews/<%=review._id%>?_method=DELETe"
                            method="post">
                            <!-- <button class="btn btn-sm btn-danger">Delete</button> -->
                        </form>

                    </div>
                </div>

                <% } %>

        </div>
    </div>